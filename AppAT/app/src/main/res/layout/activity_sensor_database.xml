<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sensor_database"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a20170208.tranvanhay.appat.SensorValueDatabaseActivity">
    <!-- This is ID section-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutTitle"
        android:background="#cfb1d2">

        <ImageView
            android:layout_width="@dimen/sensor_node_config_image_width"
            android:layout_height="@dimen/sensor_node_config_image_height"
            android:src="@drawable/euro_price_tag1600"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/textViewID"
            android:text="Not yet get"
            android:gravity="center"/>

        <ImageView
            android:layout_width="@dimen/sensor_node_config_image_width"
            android:layout_height="@dimen/sensor_node_config_image_height"
            android:src="@drawable/marker1600"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/textViewZone"
            android:text="Not yet get"
            android:gravity="center"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tabLayout"/>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/viewPaper"/>
</LinearLayout>
